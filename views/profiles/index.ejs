<h2>Profiles for this user</h2>
<form action="/profiles" method="GET">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>
<br>
<div>
    <% profiles.forEach(profile => { %>
            <div><%= profile.name %></div>
            <a href="/profiles/<%= profile.id %> ">View</a> 
            <a href="/profiles/<%= profile.id %>/edit ">Edit</a> 
            <%- include('../partials/deleteForm',
            {url: `/profiles/${profile.id}` }) %> 
    <% }) %> 
</div>